<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.nhatro.PersonalFragment">

    <ScrollView
        android:id="@+id/scrollpersonal"
        android:background="#e2e4e3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgavatar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/doremon"
                app:civ_border_color="@color/white"
                app:civ_border_width="4dp" />

            <TextView
                android:id="@+id/txtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nguyễn Văn A"
                android:textColor="#000000"
                android:textSize="25dp" />

            <LinearLayout
                android:id="@+id/manage"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/ripple_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:textColorHint="#8effffff">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/iconmanage" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="Quản lý tin đã đăng"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/save"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/ripple_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:textColorHint="#8effffff">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/iconsave" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="Danh sách đã lưu"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/information"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/ripple_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:textColorHint="#8effffff">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/iconprofile" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="Thông tin và liên hệ"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/changepass"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/ripple_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:textColorHint="#8effffff">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/iconchangepass" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="Đổi mật khẩu"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/introduce"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/ripple_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:textColorHint="#8effffff">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/iconintroduce" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="Giới thiệu"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/support"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/ripple_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:textColorHint="#8effffff">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/iconsupport" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="Hỗ trợ"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/logout"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ripple_effect"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:textColorHint="#8effffff">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logout" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="Đăng xuất"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
