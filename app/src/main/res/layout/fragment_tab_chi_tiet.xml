<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nest_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray2"
        tools:context="com.nhatro.tab_details.TabChiTiet">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/layoutThongTinChiTiet"
                    android:padding="7dp"
                    android:layout_margin="3dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/txtThongTin"
                        android:textStyle="bold"
                        android:text="Thông tin chi tiết"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingEnd="50dp"
                        android:id="@+id/txtLoaiNhaO"
                        android:padding="@dimen/paddingIteminDetailScreen"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/txtThongTin"
                        android:text="Loại nhà ở"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/valueLoaiNhaO"
                        android:padding="@dimen/paddingIteminDetailScreen"
                        app:layout_constraintTop_toBottomOf="@id/txtThongTin"
                        app:layout_constraintStart_toEndOf="@id/txtLoaiNhaO"
                        android:text="Phòng trọ"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginHorizontal="4dp"
                        android:id="@+id/line0"
                        app:layout_constraintTop_toBottomOf="@id/valueLoaiNhaO"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>


                    <TextView
                        android:id="@+id/txtDT"
                        android:padding="@dimen/paddingIteminDetailScreen"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/line0"
                        android:text="Diện tích"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/valueDienTich"
                        android:padding="@dimen/paddingIteminDetailScreen"
                        app:layout_constraintTop_toBottomOf="@id/line0"
                        app:layout_constraintStart_toStartOf="@id/valueLoaiNhaO"
                        android:text="12m2 (3m x 4m)"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginHorizontal="4dp"
                        android:id="@+id/line1"
                        app:layout_constraintTop_toBottomOf="@id/valueDienTich"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>



                    <TextView
                        android:id="@+id/txtGiaThue"
                        android:padding="@dimen/paddingIteminDetailScreen"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/line1"
                        android:text="Giá thuê"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/valueGiaThue"
                        android:padding="@dimen/paddingIteminDetailScreen"
                        app:layout_constraintTop_toBottomOf="@id/line1"
                        app:layout_constraintStart_toStartOf="@id/valueDienTich"
                        android:text="1.200.000 vnđ/tháng"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginHorizontal="4dp"
                        android:id="@+id/line2"
                        app:layout_constraintTop_toBottomOf="@id/valueGiaThue"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/txtDatCoc"
                        android:padding="@dimen/paddingIteminDetailScreen"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/line2"
                        android:text="Đặt cọc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/valueDatCoc"
                        android:padding="@dimen/paddingIteminDetailScreen"
                        app:layout_constraintTop_toBottomOf="@id/line2"
                        app:layout_constraintStart_toStartOf="@id/valueGiaThue"
                        android:text="1.200.000 vnđ"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginHorizontal="4dp"
                        android:id="@+id/line3"
                        app:layout_constraintTop_toBottomOf="@id/valueDatCoc"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>



                    <TextView
                        android:id="@+id/txtTienDien"
                        android:padding="@dimen/paddingIteminDetailScreen"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/line3"
                        android:text="Tiền điện"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/valueTienDien"
                        android:padding="@dimen/paddingIteminDetailScreen"
                        app:layout_constraintTop_toBottomOf="@id/line3"
                        app:layout_constraintStart_toStartOf="@id/valueDatCoc"
                        android:text="3000 vnđ/kWh"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginHorizontal="4dp"
                        android:id="@+id/line4"
                        app:layout_constraintTop_toBottomOf="@id/valueTienDien"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>



                    <TextView
                        android:id="@+id/txtTienNuoc"
                        android:padding="@dimen/paddingIteminDetailScreen"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/line4"
                        android:text="Tiền nước"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/valueTienNuoc"
                        android:padding="@dimen/paddingIteminDetailScreen"
                        app:layout_constraintTop_toBottomOf="@id/line4"
                        app:layout_constraintStart_toStartOf="@id/valueTienDien"
                        android:text="4000 vnđ/m3"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginHorizontal="4dp"
                        android:id="@+id/line5"
                        app:layout_constraintTop_toBottomOf="@id/valueTienNuoc"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>



                    <TextView
                        android:id="@+id/txtGioGiac"
                        android:padding="@dimen/paddingIteminDetailScreen"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/line5"
                        android:text="Giờ giấc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/valueGioGiac"
                        android:padding="@dimen/paddingIteminDetailScreen"
                        app:layout_constraintTop_toBottomOf="@id/line5"
                        app:layout_constraintStart_toStartOf="@id/valueTienNuoc"
                        android:text="Tự do"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginHorizontal="4dp"
                        android:id="@+id/line6"
                        app:layout_constraintTop_toBottomOf="@id/valueGioGiac"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>



                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/layoutLienHe"
                    android:padding="7dp"
                    android:layout_margin="3dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/txtLienHe"
                        android:textStyle="bold"
                        android:text="Thông tin liên hệ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingEnd="50dp"
                        android:id="@+id/txtHoTen"
                        android:padding="8dp"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/txtLienHe"
                        android:text="Họ tên"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/valueHoten"
                        android:padding="8dp"
                        app:layout_constraintStart_toEndOf="@id/txtHoTen"
                        app:layout_constraintTop_toBottomOf="@id/txtLienHe"
                        android:text="Nguyễn Văn Tên"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginHorizontal="4dp"
                        android:id="@+id/line00"
                        app:layout_constraintTop_toBottomOf="@id/valueHoten"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>


                    <TextView
                        android:id="@+id/txtSDT"
                        android:padding="8dp"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/line00"
                        android:text="Số điện thoại"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:paddingEnd="20dp"
                        android:id="@+id/valueSDT"
                        android:padding="8dp"
                        app:layout_constraintStart_toEndOf="@id/txtHoTen"
                        app:layout_constraintTop_toBottomOf="@id/line00"
                        android:text="0969349345"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/iconSMS"
                        android:layout_margin="8dp"
                        app:layout_constraintTop_toTopOf="@id/line00"
                        app:layout_constraintStart_toEndOf="@id/valueSDT"
                        android:src="@drawable/icons_sms"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:paddingBottom="2dp"
                        />

                    <ImageView

                        android:id="@+id/iconCall"
                        android:layout_marginEnd="20dp"
                        android:layout_margin="8dp"
                        app:layout_constraintTop_toTopOf="@id/line00"
                        app:layout_constraintStart_toEndOf="@id/iconSMS"
                        android:src="@drawable/icon_call"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:paddingBottom="2dp"/>

                    <View
                        android:layout_marginHorizontal="4dp"
                        android:id="@+id/line01"
                        app:layout_constraintTop_toBottomOf="@id/iconSMS"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>



                    <TextView
                        android:id="@+id/txtFaceBook"
                        android:padding="8dp"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/line01"
                        android:text="Facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/iconfacebook"
                        android:layout_margin="8dp"
                        app:layout_constraintStart_toEndOf="@id/valueSDT"
                        app:layout_constraintTop_toBottomOf="@id/line01"
                        android:src="@drawable/icon_facebook"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        />

                    <ImageView
                        android:id="@+id/iconMessenger"
                        android:layout_marginEnd="20dp"
                        android:layout_margin="8dp"
                        app:layout_constraintTop_toTopOf="@id/line01"
                        app:layout_constraintStart_toEndOf="@id/iconfacebook"
                        android:src="@drawable/icon_messenger"
                        android:layout_width="50dp"
                        android:layout_height="20dp" />
                    <View
                        android:layout_marginHorizontal="4dp"
                        android:id="@+id/line02"
                        app:layout_constraintTop_toBottomOf="@id/txtFaceBook"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>



                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:id="@+id/valueDiaChi"
                        android:padding="@dimen/paddingIteminDetailScreen"
                        app:layout_constraintTop_toBottomOf="@id/txtFaceBook"
                        android:text="78/12 đường Làng Tăng Phú, phường Tăng Nhơn Phú A, Quận 9, Hồ Chí Minh"
                        android:textSize="12sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/txtHoTen"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                    <View
                        android:layout_marginHorizontal="4dp"
                        android:id="@+id/line03"
                        app:layout_constraintTop_toBottomOf="@id/valueDiaChi"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/txtDiaChi"
                        android:padding="@dimen/paddingIteminDetailScreen"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/line02"
                        app:layout_constraintBottom_toTopOf="@id/line03"
                        android:text="Địa chỉ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </android.support.constraint.ConstraintLayout>


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/layoutTienIch"
                    android:padding="7dp"
                    android:layout_margin="3dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/txtTienIch"
                        android:textStyle="bold"
                        android:text="Tiện tích và nội thất"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <com.nhatro.adapter.ExpandableHeightGridView
                        android:paddingTop="7dp"
                        android:id="@+id/gridTienNghi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:isScrollContainer="false"
                        android:numColumns="5"
                        android:stretchMode="columnWidth"
                        app:layout_constraintTop_toBottomOf="@id/txtTienIch" />

                </android.support.constraint.ConstraintLayout>


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/layoutMoTaThem"
                    android:padding="7dp"
                    android:layout_margin="3dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/txtMoTaThem"
                        android:textStyle="bold"
                        android:paddingBottom="4dp"
                        android:text="Mô tả thêm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:padding="7dp"
                        android:orientation="vertical"
                        android:background="@drawable/back_ground_item_list_view_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/txtMoTaThem"
                        >
                        <TextView
                            android:id="@+id/txtbinhluan"
                            android:textSize="12sp"
                            android:text="Phòng mình rộng rãi, có gác rộng, thoải mái, sạch sẽ từ trong phòng ra ngoài cổng.\n
Tiền phòng: 1 triệu 6, điện 3k, nước 5k, wifi 50k.\n
Địa chỉ: 123/11 Hoàng Diệu 2, Linh Trung, Thủ Đức (1 cổng Đối diện trà sữa Hoa Hướng Dương, và 1 cổng đối diện Trà sữa Gossip. )"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>



            </LinearLayout>




        </ScrollView>

    </FrameLayout>
</android.support.v4.widget.NestedScrollView>