<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.nhatro.Newpost">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txtThongTin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray2"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:text="Thông tin chi tiết"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/valueTieuDe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/white"
                    android:hint="Nhập tiêu đề *"
                    android:maxLines="7"
                    android:paddingLeft="90dp"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:windowSoftInputMode="adjustPan"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtThongTin"

                    />

                <TextView
                    android:id="@+id/txtTieuDe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:paddingEnd="30dp"
                    android:text="Tiêu đề"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/valueTieuDe"
                    app:layout_constraintTop_toTopOf="@id/valueTieuDe"

                    />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/valueTieuDe" />

                <TextView
                    android:id="@+id/txtLoaiNhaO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:paddingEnd="30dp"
                    android:text="Loại nhà ở"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/divider1" />

                <CheckBox
                    android:id="@+id/checkPhongTro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cho Thuê Phòng Trọ"
                    app:layout_constraintTop_toBottomOf="@id/txtLoaiNhaO" />

                <CheckBox
                    android:id="@+id/checkNhaNguyenCan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cho Thuê Nhà Nguyên Căn"
                    app:layout_constraintStart_toStartOf="@id/valueTieuDe"
                    app:layout_constraintTop_toBottomOf="@id/checkPhongTro" />

                <CheckBox
                    android:id="@+id/checkTimOGhep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tìm Bạn Ở Ghép"
                    app:layout_constraintTop_toBottomOf="@id/checkNhaNguyenCan" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/checkTimOGhep" />
                />

                <TextView
                    android:id="@+id/txtSoNguoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:paddingEnd="30dp"
                    android:text="Số người ở"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/divider2" />

                <LinearLayout
                    android:id="@+id/layoutSoNguoi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:orientation="vertical"
                    android:paddingBottom="7dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/valueTieuDe"
                    app:layout_constraintTop_toBottomOf="@id/txtSoNguoi">

                    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                        android:id="@+id/seekSoNguoi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:bar_highlight_color="@color/colorAccent"
                        app:left_thumb_image="@drawable/icon_circle"
                        app:max_value="10"
                        app:min_value="1"
                        app:right_thumb_image="@drawable/icon_circle"
                        app:steps="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/minSoNguoi"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp"
                            android:text="1"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@id/seekSoNguoi" />

                        <TextView
                            android:id="@+id/maxSoNguoi"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:paddingTop="5dp"
                            android:text="10"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@id/seekSoNguoi"
                            app:layout_constraintTop_toBottomOf="@id/seekSoNguoi" />
                    </LinearLayout>

                </LinearLayout>


                <View
                    android:id="@+id/divider22"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/layoutSoNguoi" />
                />

                <EditText
                    android:id="@+id/valueGia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp"
                    android:backgroundTint="@color/white"
                    android:hint="Nhập giá *"
                    android:inputType="number"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:paddingLeft="90dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:windowSoftInputMode="adjustPan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider22" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/white"
                    android:paddingLeft="10dp"
                    android:text="VNĐ/Tháng"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/valueGia"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider22" />

                <TextView
                    android:id="@+id/txtGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:paddingEnd="30dp"
                    android:text="Giá"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/valueGia"
                    app:layout_constraintTop_toTopOf="@id/valueGia" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/valueGia" />
                />

                <EditText
                    android:id="@+id/valueDatCoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp"
                    android:backgroundTint="@color/white"
                    android:hint="Cọc trước *"
                    android:inputType="number"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:paddingLeft="90dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:windowSoftInputMode="adjustPan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider3" />
                <TextView
                    android:id="@+id/txtDatCoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:paddingEnd="30dp"
                    android:text="Cọc trước"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/valueDatCoc"
                    app:layout_constraintTop_toTopOf="@id/valueDatCoc" />

                <LinearLayout
                    android:id="@+id/layoutCocTruoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@id/valueDatCoc"
                    app:layout_constraintTop_toTopOf="@id/valueDatCoc"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:backgroundTint="@color/white"
                        android:paddingLeft="10dp"
                        android:text="VNĐ/Phòng"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/iconChonCocTruoc"
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:padding="7dp"
                        android:src="@drawable/icon_right"

                        />

                </LinearLayout>


                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/valueDatCoc" />
                />

                <EditText
                    android:id="@+id/valueChieuDai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp"
                    android:backgroundTint="@color/white"
                    android:hint="Chiều dài *"
                    android:inputType="number"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:paddingLeft="90dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:windowSoftInputMode="adjustPan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider4" />
                <TextView
                    android:paddingLeft="5dp"
                    android:id="@+id/txtm1"
                    android:text="m    x"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/valueChieuDai"
                    app:layout_constraintTop_toTopOf="@id/valueChieuDai"
                    app:layout_constraintStart_toEndOf="@id/valueChieuDai"

                    />

                <EditText
                    android:id="@+id/valueChieuRong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp"
                    android:backgroundTint="@color/white"
                    android:hint="Chiều rộng *"
                    android:inputType="number"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:windowSoftInputMode="adjustPan"
                    app:layout_constraintTop_toTopOf="@id/valueChieuDai"
                    app:layout_constraintStart_toEndOf="@id/txtm1" />


                <TextView
                    android:paddingLeft="5dp"
                    android:id="@+id/txtm2"
                    android:text="m "
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/valueChieuDai"
                    app:layout_constraintTop_toTopOf="@id/valueChieuDai"
                    app:layout_constraintStart_toEndOf="@id/valueChieuRong"

                    />

                <TextView
                    android:id="@+id/txtDatCo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:paddingEnd="30dp"
                    android:text="Kích thước"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/valueChieuDai"
                    app:layout_constraintTop_toTopOf="@id/valueChieuDai" />

                <View
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/valueChieuDai" />
                />




                <EditText
                    android:id="@+id/valueTienDien"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp"
                    android:backgroundTint="@color/white"
                    android:hint="Tiền điện *"
                    android:inputType="number"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:paddingLeft="90dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:windowSoftInputMode="adjustPan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider5" />
                <TextView
                    android:id="@+id/txtTienDien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:paddingEnd="30dp"
                    android:text="Tiền điện"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/valueTienDien"
                    app:layout_constraintTop_toTopOf="@id/valueTienDien" />

                <LinearLayout
                    android:id="@+id/layoutTienDien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@id/valueTienDien"
                    app:layout_constraintTop_toTopOf="@id/valueTienDien"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <TextView
                        android:id="@+id/donViTienDien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:backgroundTint="@color/white"
                        android:paddingLeft="10dp"
                        android:text="VNĐ/Tháng"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:padding="7dp"
                        android:src="@drawable/icon_right"

                        />

                </LinearLayout>

                <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/valueTienDien" />
                />



                <EditText
                    android:id="@+id/valueTienNuoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp"
                    android:backgroundTint="@color/white"
                    android:hint="Tiền nước *"
                    android:inputType="number"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:paddingLeft="90dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:windowSoftInputMode="adjustPan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider6" />
                <TextView
                    android:id="@+id/txtTienNuoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:paddingEnd="30dp"
                    android:text="Tiền nước"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/valueTienNuoc"
                    app:layout_constraintTop_toTopOf="@id/valueTienNuoc" />

                <LinearLayout
                    android:id="@+id/layoutTienNuoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@id/valueTienNuoc"
                    app:layout_constraintTop_toTopOf="@id/valueTienNuoc"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <TextView
                        android:id="@+id/donViTienNuoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:backgroundTint="@color/white"
                        android:paddingLeft="10dp"
                        android:text="VNĐ/Tháng"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:padding="7dp"
                        android:src="@drawable/icon_right"

                        />

                </LinearLayout>


                <View
                    android:id="@+id/divider7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/valueTienNuoc" />
                />
                <TextView
                    android:id="@+id/txtGioGiac"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textStyle="bold"
                    android:text="Giờ giấc"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:paddingEnd="25dp"
                    app:layout_constraintTop_toBottomOf="@id/divider7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                    <RadioButton
                        app:layout_constraintTop_toBottomOf="@id/divider7"
                        app:layout_constraintStart_toEndOf="@id/txtGioGiac"
                        android:id="@+id/radTuDo"
                        android:text="Tự do"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        app:layout_constraintStart_toStartOf="@id/radTuDo"
                        app:layout_constraintTop_toBottomOf="@id/radTuDo"
                        android:id="@+id/radGio"
                        android:text="Đóng cửa từ"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </RadioButton>

                <TextView
                    android:background="@drawable/background_gio_dong_cua"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:padding="8dp"
                    app:layout_constraintStart_toEndOf="@id/radGio"
                    app:layout_constraintTop_toTopOf="@id/radGio"
                    app:layout_constraintBottom_toBottomOf="@id/radGio"
                    android:id="@+id/valueGioDongCua"
                    android:text="00:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/divider8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/valueGioDongCua"
                    android:paddingTop="7dp"
                    android:layout_marginTop="7dp"
                    />


                <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/valueGioiTinh"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingLeft="85dp"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    segmentedgroup:layout_constraintTop_toBottomOf="@id/divider8"
                    segmentedgroup:layout_constraintStart_toEndOf="@id/lableGioiTinh"
                    segmentedgroup:sc_border_width="2dp"
                    segmentedgroup:sc_corner_radius="10dp">

                    <RadioButton
                        android:id="@+id/radNam"
                        style="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nam" />

                    <RadioButton
                        android:id="@+id/radNu"
                        style="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nữ" />
                    <RadioButton
                        android:id="@+id/radCa2"
                        style="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cả 2" />
                </info.hoang8f.android.segmented.SegmentedGroup>

                <TextView
                    android:id="@+id/txtGioiTinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:paddingEnd="30dp"
                    android:text="Giới tính"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/valueGioiTinh"
                    app:layout_constraintTop_toTopOf="@id/valueGioiTinh" />

                <View
                    android:id="@+id/divider9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/valueGioiTinh"
                    android:paddingTop="8dp"
                    android:layout_marginTop="7dp"
                    />

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/divider9"
                    android:id="@+id/txtThongTinDC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray2"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:text="Thông tin địa chỉ"
                    android:textColor="@color/black"
                    android:textStyle="bold" />



                <Spinner
                    android:id="@+id/spinnerTinhTP"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="85dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtThongTinDC"

                    >
                </Spinner>

                <TextView
                    android:id="@+id/txtTP"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textStyle="bold"
                    android:text="Tỉnh/TP"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:paddingEnd="25dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/spinnerTinhTP"
                    app:layout_constraintBottom_toBottomOf="@id/spinnerTinhTP"
                    />
                <View
                    android:id="@+id/divider10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/spinnerTinhTP"
                    android:paddingTop="8dp"
                    android:layout_marginTop="7dp"
                    />



                <Spinner
                    android:id="@+id/spinnerQuanHuyen"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="85dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/divider10"

                    >
                </Spinner>

                <TextView
                    android:id="@+id/txtQuanHuyen"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textStyle="bold"
                    android:text="Quận huyện"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:paddingEnd="25dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/spinnerQuanHuyen"
                    app:layout_constraintBottom_toBottomOf="@id/spinnerQuanHuyen"
                    />
                <View
                    android:id="@+id/divider11"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/txtQuanHuyen"
                    android:paddingTop="8dp"
                    android:layout_marginTop="7dp"
                    />


                <EditText
                    android:id="@+id/valueSoNha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:backgroundTint="@color/white"
                    android:hint="Số nhà, đường, phường xã *"
                    android:maxLines="3"
                    android:paddingLeft="90dp"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:windowSoftInputMode="adjustPan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider11" />
                <TextView
                    android:id="@+id/txtSoNha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:paddingEnd="30dp"
                    android:text="Số nhà"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/valueSoNha"
                    app:layout_constraintTop_toTopOf="@id/valueSoNha" />


                <View
                    android:id="@+id/divider12"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/valueSoNha"
                    />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/layoutBD"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    app:layout_constraintTop_toBottomOf="@id/divider12"
                    android:background="@drawable/corner_seekbar_mapview"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingBottom="@dimen/paddingIteminDetailScreen"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="13sp"
                        android:textStyle="italic"
                        android:id="@+id/txtLayVT"
                        android:text="Lấy vị trí trên bản đồ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.google.android.gms.maps.MapView
                        android:layout_marginHorizontal="10dp"
                        app:layout_constraintTop_toBottomOf="@id/txtLayVT"
                        android:id="@+id/mapViTri"
                        android:layout_width="match_parent"
                        android:layout_height="130dp" />
                    <TextView
                        app:layout_constraintTop_toBottomOf="@id/mapViTri"
                        android:layout_below="@id/mapTabBanDo"
                        android:textStyle="italic"
                        android:gravity="center"
                        android:text="Chọn vào bản đồ để hiện thị toàn màn hình"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.constraint.ConstraintLayout>

                <View
                    android:id="@+id/divider13"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/layoutBD"
                    android:paddingTop="8dp"
                    android:layout_marginTop="7dp"
                    />


                <TextView
                    app:layout_constraintTop_toBottomOf="@id/divider13"
                    android:id="@+id/txtThongTinTienNghi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray2"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:text="Thông tin tiện nghi"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <com.nhatro.adapter.ExpandableHeightGridView
                    android:paddingTop="7dp"
                    android:id="@+id/gridTienNghi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="false"
                    android:numColumns="5"
                    android:stretchMode="columnWidth"
                    app:layout_constraintTop_toBottomOf="@id/txtThongTinTienNghi" />


                <View
                    android:id="@+id/divider14"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/gridTienNghi"
                    android:paddingTop="8dp"
                    android:layout_marginTop="7dp"
                    />

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/divider14"
                    android:id="@+id/txtMoTaThem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray2"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:text="Mô tả thêm"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/layoutMTTHEM"
                    app:layout_constraintTop_toBottomOf="@id/txtMoTaThem"
                    android:background="@drawable/back_ground_item_list_view_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_marginBottom="7dp"
                    >

                    <EditText
                        android:textSize="13sp"
                        android:backgroundTint="@android:color/transparent"
                        android:id="@+id/edtMoTaThem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:windowSoftInputMode="adjustPan"
                        android:textColor="#000000"
                        android:hint="Mô tả thêm"

                        />
                </LinearLayout>

                <TextView
                    android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@id/layoutMTTHEM"
                    android:id="@+id/txtHA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray2"
                    android:padding="@dimen/paddingIteminDetailScreen"
                    android:text="Hình ảnh"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/idbtnAddImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/add_image"
                    app:riv_border_color="#c6c5c5"
                    app:riv_border_width="1dip"
                    app:riv_corner_radius="15dip"
                    app:riv_oval="false"
                    app:riv_tile_mode="clamp"
                    android:padding="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtHA"
                    />
                <TextView
                    android:id="@+id/txtHD"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/idbtnAddImage"
                    android:text="Khi chọn ảnh, giữ vào 1 ảnh để mở chế độ chọn nhiều ảnh"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.nhatro.adapter.ExpandableHeightGridView
                    android:paddingTop="7dp"
                    android:id="@+id/gridHA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="false"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    app:layout_constraintTop_toBottomOf="@id/txtHD" />
            </android.support.constraint.ConstraintLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/layoutButtonOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/scrollView"
            android:background="@color/colorPrimary"
            android:padding="13dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTransparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent2"
        android:orientation="vertical"
        android:visibility="gone"></LinearLayout>
</RelativeLayout>
